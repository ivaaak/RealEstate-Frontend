<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Real-Estate</title>

    <link rel="icon" type="image/x-icon" href="/re.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <script src="https://cdn.jsdelivr.net/npm/regenerator-runtime@0.13.7/runtime.min.js"></script>

    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self' https: localhost:* keycloak:*; 
      script-src 'unsafe-inline' 'unsafe-eval' https: localhost:*; 
      connect-src http: keycloak:* https: localhost:* ws://localhost:*; 
      style-src 'unsafe-inline' https:; 
      object-src 'none'; 
      img-src 'self' data: https: localhost:*;"
    />
    <meta name="importmap-type" content="systemjs-importmap" />
    <script type="systemjs-importmap">
      {
        "imports": {
          "single-spa": "https://cdn.jsdelivr.net/npm/single-spa@5.9.0/lib/system/single-spa.min.js"
        }
      }
    </script>
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/single-spa@5.9.0/lib/system/single-spa.min.js"
      as="script"
    />

    <script type="systemjs-importmap">
      {
        "imports": {
          "react": "https://cdn.jsdelivr.net/npm/react@18.2.0/umd/react.production.min.js",
          "react-dom": "https://cdn.jsdelivr.net/npm/react-dom@18.2.0/umd/react-dom.production.min.js",
          "@real-estate/root-config": "//localhost:8000/real-estate-root-config.js",
          "@real-estate/auth": "//localhost:8001/real-estate-auth.js"
        }
      }
    </script>
    <script type="text/javascript">
      localStorage.setItem(
        'keycloakBaseUrl', 
        'http://keycloak:9080'
      );
      localStorage.setItem(
        'keycloakLogoutUrl',
        'http://keycloak:9080/realms/test/protocol/openid-connect/logout'
      );
      localStorage.setItem(
        'keycloakRealm', 
        'test'
      );
      localStorage.setItem(
        'keycloakClient', 
        'real-estate'
      );
      localStorage.setItem(
        'axiosBaseUrl', 
        'http://localhost:9000'
      ); // API Gateway URL
    </script>

    <script src="https://cdn.jsdelivr.net/npm/import-map-overrides@2.2.0/dist/import-map-overrides.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/systemjs@6.8.3/dist/system.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/systemjs@6.8.3/dist/extras/amd.js"></script>
  </head>
  <body>
    <noscript> You need to enable JavaScript to run this app. </noscript>
    <script>
      System.import('@real-estate/root-config');
      System.import('@real-estate/shared-ui');
    </script>
    <import-map-overrides-full
      show-when-local-storage="devtools"
      dev-libs
    ></import-map-overrides-full>
  </body>
</html>
